<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.VBox?>

<AnchorPane prefHeight="600.0" prefWidth="400.0"
            xmlns="http://javafx.com/javafx/17"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="luna.ui.MainWindow">
    <children>
        <TextField fx:id="userInput"
                   layoutY="558.0"
                   prefHeight="41.0"
                   prefWidth="324.0"
                   AnchorPane.leftAnchor="10.0"
                   AnchorPane.rightAnchor="86.0"
                   AnchorPane.bottomAnchor="10.0"
                   onAction="#handleUserInput"
                   style="-fx-border-radius: 10;
                          -fx-padding: 10;
                          -fx-font-size: 14px;" />
        <Button fx:id="sendButton"
                layoutY="558.0"
                prefHeight="41.0"
                prefWidth="76.0"
                AnchorPane.rightAnchor="10.0"
                AnchorPane.bottomAnchor="10.0"
                text="Send"
                style="-fx-background-color: #1976D2;
                       -fx-text-fill: white;
                       -fx-font-size: 14px;
                       -fx-border-radius: 10;" />
        <ScrollPane fx:id="scrollPane"
                    hbarPolicy="NEVER"
                    vbarPolicy="ALWAYS"
                    prefHeight="557.0"
                    prefWidth="400.0"
                    AnchorPane.topAnchor="0.0"
                    AnchorPane.leftAnchor="0.0"
                    AnchorPane.rightAnchor="0.0"
                    AnchorPane.bottomAnchor="50.0"
                    fitToWidth="true"
                    fitToHeight="true"
                    style="-fx-background: #FAFAFA;">
            <VBox fx:id="dialogContainer"
                  spacing="10"
                  style="-fx-padding: 15;"
                  AnchorPane.topAnchor="0.0"
                  AnchorPane.leftAnchor="0.0"
                  AnchorPane.rightAnchor="0.0"
                  AnchorPane.bottomAnchor="0.0"/>
        </ScrollPane>
    </children>
</AnchorPane>

